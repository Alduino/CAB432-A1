{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "outDir": "out",
    "isolatedModules": true
  },
  "include": [
    "src"
  ],
  "exclude": ["**/node_modules", "**/.*/"]
}
